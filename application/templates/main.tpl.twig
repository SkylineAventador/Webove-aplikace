<div class="container_fluid">
    <div class="jumbotron text-center mb-0">
        <h1>Konference</h1>
        <p>Vítejte na webové konferenci určené k probrání takových věcí.</p>
    </div>
    <div class="container shadow p-3 mb-4 text-justify border"
            style="margin-top: 70px">
        <h2 class="text-dark text-center">Aktuální články</h2>
        {% if data is not empty %}
            {% for id in data %}
                <div class="card mb-3 bg-light text-dark">
                    <div class="card-header">
                        Zveřejněno: <b>{{ id.date }}</b>, uzivatelem <b>{{ id.author }}</b>.
                        {% if user_name == "Dmytro Kravtsov" %}
                            <button type="button"
                                    class="btn btn-outline-danger float-right">Delete</button>
                        {% endif %}
                    </div>
                    <div class="card-body">
                        <h4>{{ id.title }}</h4>
                        <p>{{ id.text }}</p>
                    </div>
                </div>
            {% endfor %}

            {% else %}
                <div class="card text-center text-dark">
                    <div class="card-body bg-light shadow border border-danger">
                        <h1>Chyba</h1>
                        <br>
                        <h2>Nebyly nalézeny žádné články</h2>
                    </div>
                </div>
        {% endif %}

    </div>
</div>